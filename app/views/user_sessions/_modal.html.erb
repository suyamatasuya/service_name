<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalLabel">ログイン</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if flash.now[:alert] %>
          <div class="alert alert-danger" role="alert">
            <%= flash.now[:alert] %>
          </div>
        <% end %>
        <%= form_for(:user, url: user_sessions_path, remote: true) do |f| %>
          <div class="form-group">
            <%= f.label :email, 'メールアドレス', class: 'form-label' %>
            <%= f.email_field :email, id: 'login_user_email', class: 'form-control', placeholder: 'メールアドレスを入力してください' %>
          </div>

          <div class="form-group">
            <%= f.label :password, 'パスワード', class: 'form-label' %>
            <%= f.password_field :password, id: 'login_user_password', class: 'form-control', placeholder: 'パスワードを入力してください' %>
          </div>

          <div class="form-group">
            <%= f.submit 'ログイン', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
