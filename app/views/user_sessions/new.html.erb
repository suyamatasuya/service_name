<%= stylesheet_link_tag 'user_sessions' %>
<div class="container mt-5">
    <div class="row justify-content-center mt-7">
        <div class="col-lg-10 col-md-10 col-sm-12">
            <div class="card border-0 shadow mt-5">
                <div class="card-body p-5">
                    <h2 class="mb-4 text-center"><%= t('user_sessions.title') %></h2>
                    <%= form_for @user, url: user_sessions_path, html: { class: 'form mt-4' } do |f| %>
                        <% if @user.errors.any? %>
                            <div id="error_explanation" class="alert alert-danger">
                                <h2><%= pluralize(@user.errors.count, t('user_sessions.error_message.prohibited_saving')) %></h2>
                                <ul>
                                    <% @user.errors.full_messages.each do |message| %>
                                        <li><%= message %></li>
                                    <% end %>
                                </ul>
                            </div>
                        <% end %>
                        <div class="form-group">
                            <%= f.label :email, t('user_sessions.form.email') %>
                            <%= f.email_field :email, class: 'form-control' %>
                        </div>
                        <div class="form-group">
                            <%= f.label :password, t('user_sessions.form.password') %>
                            <%= f.password_field :password, class: 'form-control' %>
                        </div>
                        <div class="form-group">
                            <%= f.submit t('user_sessions.form.login'), class: 'btn btn-tea btn-block' %>
                        </div>
                    <% end %>

                    <!-- Googleでログインボタンを追加 -->
                    <div class="mt-3 text-center">
                        <%= link_to auth_at_provider_path(provider: :google), class: 'btn btn-google' do %>
                            <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google logo" width="20" height="20">
                            Googleでログイン
                        <% end %>
                    </div>

                    <!-- LINEでログインボタンを追加 -->
                    <div class="mt-3 text-center">
                        <%= link_to auth_at_provider_path(provider: :line), class: 'line-login-btn' do %>
                            <%= image_tag "btn_base.png", alt: "Button Base", class: "btn-icon" %>
                            LINEでログイン
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
