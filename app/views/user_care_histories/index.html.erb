<h1>Your Care History</h1>

<table id="careHistoryTable" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Care Method</th>
      <th>Description</th>
      <th>Received On</th>
      <th>Symptoms</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @user_care_histories.each do |history| %>
      <tr>
        <td><%= history.care_method.name %></td>
        <td><%= history.care_method.description %></td>
        <td><%= history.care_received_date %></td>
        <td><%= history.symptom.pain_type %> pain in <%= history.symptom.pain_location %></td>
        <td><%= link_to 'Delete', user_care_history_path(history), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
$(document).ready(function() {
    $('#careHistoryTable').DataTable();
});
</script>
