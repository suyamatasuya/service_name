<style>
  body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    padding: 0;
    margin: 0;
  }

  .care-methods-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 80%;
    max-height: 80vh;
    overflow-y: auto;
    padding: 20px;
    background-color: #f5f5f5;
  }

  .care-method-row {
    display: flex;
    justify-content: space-between;
    width: 100%;
  }

  .care-method {
    width: 100%;
    margin-bottom: 50px;
  }

  .care-method-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
  }
</style>

<h1>Care Methods</h1>

<%= link_to 'New Care Method', new_care_method_path %>

<div class="care-methods-container">
  <% if @care_methods.any? %>
    <% @care_methods.each do |care_method| %>
      <div class="care-method">
        <h1><%= care_method.name %></h1>
        <p><strong>Description:</strong> <%= care_method.description %></p>
        <p><strong>Link:</strong> <%= care_method.link %></p>
        <div class="care-method-actions">
          <%= link_to 'Show', care_method_path(care_method), class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_care_method_path(care_method), class: "btn btn-primary" %>
          <%= link_to 'Delete', care_method_path(care_method), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No care methods found.</p>
  <% end %>
</div>
