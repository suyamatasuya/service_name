<style>
  body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  .care-methods-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 80%;
    max-height: 80vh;
    overflow-y: auto;
    padding: 20px;
    background-color: #f5f5f5;
  }

  .care-method {
    width: 48%;
    margin-bottom: 20px;
  }

  .care-method-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
  }
</style>

<div class="care-methods-container">
  <% if @care_methods.any? %>
    <% @care_methods.each do |care_method| %>
      <div class="care-method">
        <h1><%= care_method.name %></h1>
        <p><strong>Description:</strong> <%= care_method.description %></p>
        <% care_method.video_links.each_with_index do |link, index| %>
          <p>
            <strong>Video Link <%= index + 1 %> :</strong> <%= link %>
            <br/>
            <strong>Video Title <%= index + 1 %> :</strong> <%= care_method.video_titles[index] %>
          </p>
        <% end %>
        <div class="care-method-actions">
          <%= link_to '編集', edit_care_method_path(care_method), class: "btn btn-primary" %>
          <%= link_to '削除', care_method_path(care_method), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No care methods found.</p>
  <% end %>
</div>
