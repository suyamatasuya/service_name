<div class="container-fluid d-flex flex-column justify-content-center align-items-center" style="min-height: 100vh;">
  <h1 class="text-center title">問診3</h1>
  <h2 class="text-center instruction">痛みの強度を選択してください</h2>
  <%= form_with model: @symptom, url: symptom_path(@symptom), method: :patch do |f| %>
    <div class="d-flex justify-content-around" style="width: 100%; max-width: 600px;">
      <div class="form-group">
        <label for="pain_intensity">痛みの強度 (0-10)</label>
        <%= f.number_field :pain_intensity, class: 'form-control', min: 0, max: 10 %>
      </div>
    </div>
    <div class="text-center">
      <%= f.submit '次へ', class: 'btn btn-primary btn-lg custom-button' %>
    </div>
  <% end %>
</div>

<style>
/* Custom button size */
.custom-button {
  width: 200px;
  height: 60px;
}

/* Custom title */
.title {
  font-size: 3em;
  font-family: 'Yu Gothic', sans-serif;
  margin-bottom: 0.5em;
}

/* Custom instruction */
.instruction {
  font-size: 1.5em;
  font-family: 'Yu Gothic', sans-serif;
  margin-bottom: 1em;
}
</style>
