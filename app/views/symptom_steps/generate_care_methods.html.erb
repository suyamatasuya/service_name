<style>
  /* CSSコードをここに書き込む */
  .care-methods {
    text-align: center;
    height: 300px;
    width: 400px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f5f5f5;
    overflow-y: auto;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }

  .care-methods h1 {
    font-size: 24px;
    margin-bottom: 10px;
  }

  .care-methods p {
    font-size: 16px;
    margin-bottom: 5px;
  }
</style>

<div class="care-methods">
  <h1>ケア方法</h1>

  <% if @symptom.generate_care_methods.any? %>
    <% @symptom.generate_care_methods.each do |method| %>
      <p><%= method %></p>
    <% end %>
  <% else %>
    <p>No care methods found.</p>
  <% end %>
  <p>Debug: <%= @symptom.inspect %></p>
  <p>Debug: <%= @symptom.generate_care_methods.inspect %></p>
</div>
