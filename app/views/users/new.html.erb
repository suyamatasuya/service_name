<body>
  <%= stylesheet_link_tag 'users' %>
  <div class="container">
      <div class="row justify-content-center">
          <div class="col-md-6">
              <div class="card border-0 shadow mt-5">
                  <div class="card-body p-5">
                      <h2 class="mb-4"><%= I18n.t('views.users.new.title') %></h2>
                      <%= form_for @user, url: users_path, html: { class: 'form mt-4' } do |f| %>
                          <% if @user.errors.any? %>
                              <div id="error_explanation" class="alert alert-danger">
                                  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
                                  <ul>
                                      <% @user.errors.full_messages.each do |message| %>
                                          <li><%= message %></li>
                                      <% end %>
                                  </ul>
                              </div>
                          <% end %>
                          <div class="form-group">
                              <%= f.label :email, I18n.t('views.users.new.email') %>
                              <%= f.email_field :email, class: 'form-control' %>
                          </div>
                          <div class="form-group">
                              <%= f.label :password, I18n.t('views.users.new.password') %>
                              <%= f.password_field :password, class: 'form-control' %>
                          </div>
                          <div class="form-group">
                              <%= f.label :password_confirmation, I18n.t('views.users.new.password_confirmation') %>
                              <%= f.password_field :password_confirmation, class: 'form-control' %>
                          </div>
                          <div class="form-group">
                              <%= f.label :name, I18n.t('views.users.new.name') %>
                              <%= f.text_field :name, class: 'form-control' %>
                          </div>
                          <div class="form-group">
                              <%= f.submit I18n.t('views.users.new.submit_button'), class: 'btn btn-tea btn-block' %>
                          </div>
                      <% end %>
                  </div>
              </div>
          </div>
      </div>
  </div>
</body>
